{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist",
    "isolatedModules": true,
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}
